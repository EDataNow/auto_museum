
<%= form_tag do %>
<fieldset>
<div class="jumbotron">
  <div class="container">
    <h1>Please Log In</h1>
  </div>
</div>

<div class="container">
<% if flash[:alert] %>
<p id="notice"><%= flash[:alert] %></p>
<% end %>
  <div class="form-group">
    <%= label_tag :name, 'Name:' %><br/>
    <%= text_field_tag :name, params[:name], {class: "form-control"} %>
  </div>
  <div class="form-group">
    <%= label_tag :password, 'Password:' %><br/>
    <%= password_field_tag :password, params[:password], {class: "form-control"} %>
  </div>
  <div class="form-group">
    <%= submit_tag "Login" %>
  </div>
</fieldset>
<% end %>
</div>